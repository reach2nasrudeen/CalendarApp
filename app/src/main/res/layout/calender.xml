<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_margin="15dp"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAllCaps="true"
        android:padding="10dp"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textMonth"
        android:text="Jan"
        android:textSize="22sp"/>
    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="10dp"
            android:layout_weight="1"
            android:id="@+id/textSunday"
            android:text="@string/textSunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:id="@+id/textMonday"
            android:text="@string/textMonday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:id="@+id/textTueday"
            android:text="@string/textTueday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:id="@+id/textWednesday"
            android:text="@string/textWednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:id="@+id/textThursday"
            android:text="@string/textThursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:id="@+id/textFriday"
            android:text="@string/textFriday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:id="@+id/textSatday"
            android:text="@string/textSatday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <GridView
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:id="@+id/gv_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF"
        android:cacheColorHint="#FFFF"
        android:gravity="center"
        android:listSelector="@android:color/white"
        android:numColumns="7"
        android:stretchMode="columnWidth"
        android:textAlignment="center"/>
</LinearLayout>